    <Grid 
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*"
        ColumnDefinitions="Auto,*">

        <Label
            Text="Notification settings"
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
            FontAttributes="Bold"
            HorizontalOptions="Center"/>

        <Label
            Text="Title"
            Grid.Row="1" Grid.Column="0"/>
        <Entry
            Placeholder="Enter title"
            Grid.Row="1" Grid.Column="1"
            Text="{Binding Title}"/>

        <Label
            Text="Description"
            Grid.Row="2" Grid.Column="0"/>
        <Entry
            Placeholder="Enter description"
            Grid.Row="2" Grid.Column="1"
            Text="{Binding Description}"/>

        <Label 
            Text="Date"
            Grid.Row="3" Grid.Column="0"/>
        <DatePicker 
            Date="{Binding NotificationDate}"
            Grid.Row="3" Grid.Column="1"/>

        <Label 
            Text="Time"
            Grid.Row="4" Grid.Column="0"/>
        <TimePicker 
            Time="{Binding NotificationTime}"
            Grid.Row="4" Grid.Column="1"/>

        <Label
            Text="Repeat"
            Grid.Row="5" Grid.Column="0"/>
        <Switch 
            x:Name="RepeatSwitch"
            Grid.Row="5" Grid.Column="1"
            HorizontalOptions="Start"
            IsToggled="{Binding EnableRepeat}" />

        <HorizontalStackLayout
            Grid.Row="6" Grid.Column="1"
            IsVisible="{Binding Source={x:Reference RepeatSwitch}, Path=IsToggled}">
            <Label 
                Text="{Binding RepeatInterval, 
                StringFormat='Every {0} minutes'}"/>
            <Stepper 
                Minimum="5"
                Maximum="995"
                Increment="5" 
                WidthRequest="100"
                Value="{Binding RepeatInterval}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout 
            HorizontalOptions="Center"
            Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
            Margin="1,30,1,0">
            <Button 
                Text="Set"
                Command="{Binding SetCommand}"/>
            <Button 
                Text="Clear"
                Command="{Binding ClearCommand}"/>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>